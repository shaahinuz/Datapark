{
  "manifest_version": 3,
  "name": "Datapark",
  "version": "1.3.0",
  "description": "Advanced data comparison and reporting tool for IT Park dashboards. Datapark by @shaahinuz",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "notifications"
  ],
  "host_permissions": [
    "https://my.it-park.uz/*",
    "https://regions-stat.it-park.uz/*",
    "https://*.it-park.uz/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Datapark"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.it-park.uz/*"],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}